---
import '@fontsource/inter';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/jetbrains-mono';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Vibe Research - AI 科研指南',
  description = 'AI研究电子书 - 从 idea 到论文投稿的完整实践工作流',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const getPath = (path: string) => {
  const base = import.meta.env.BASE_URL;
  return base === '/' ? path : `${base.replace(/\/$/, '')}${path}`;
};
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href={getPath('/favicon.svg')} />
    <link rel="canonical" href={canonicalURL} />
    <script is:inline type="module" src={getPath('/scripts/mermaid-init.js')}></script>
    <title>{title}</title>
  </head>
  <body class="bg-primary text-slate-900 min-h-screen flex flex-col font-sans selection:bg-accent/25 selection:text-slate-900">
    <header class="fixed top-0 left-0 right-0 bg-primary/80 backdrop-blur-md border-b border-slate-900/10 z-50">
      <nav class="max-w-7xl mx-auto px-6 h-[70px] flex justify-between items-center">
        <a href={getPath('/')} class="text-xl font-bold">
          <span class="bg-gradient-to-br from-blue-500 to-violet-600 bg-clip-text text-transparent">Vibe Research</span>
        </a>

        <ul class="hidden md:flex gap-8 items-center">
          <li><a href={getPath('/')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">首页</a></li>
          <li><a href={getPath('/#chapters')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">章节</a></li>
          <li><a href={getPath('/#workflow')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">工作流</a></li>
          <li><a href={getPath('/#about')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">关于</a></li>
          <li><a href={getPath('/docs/intro/01-overview')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">文档</a></li>
          <li><a href={getPath('/skills')} class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">Skills</a></li>
          <li><a href="https://github.com/yiweinanzi/ai-research-ebook" target="_blank" rel="noopener" class="text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">GitHub</a></li>
        </ul>
      </nav>
    </header>

    <main class="flex-1 pt-[70px]">
      <slot />
    </main>

    <footer class="bg-secondary border-t border-slate-900/10 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-slate-500 text-sm">&copy; {new Date().getFullYear()} Vibe Research. Built with Astro + Tailwind.</p>
        <div class="flex gap-6">
          <a href="https://github.com/yiweinanzi/ai-research-ebook" target="_blank" rel="noopener" class="text-slate-500 hover:text-accent transition-colors text-sm">GitHub</a>
          <a href={getPath('/docs/intro/01-overview')} class="text-slate-500 hover:text-accent transition-colors text-sm">开始阅读</a>
        </div>
      </div>
    </footer>
  </body>
</html>
